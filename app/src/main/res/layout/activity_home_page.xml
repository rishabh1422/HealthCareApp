<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".HomePage">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/toobar"
            android:elevation="8dp"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/doc"
                    android:layout_width="50dp"
                    android:layout_height="40dp">

                </ImageView>
                <TextView

                    android:textAlignment="center"
                    android:background="#ffc0cb"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="60dp"
                    android:text="Explore"
                    android:textColor="#000"
                    android:layout_height="25dp">

                </TextView>
                <Button
                   android:layout_marginTop="6.5dp"
                    android:textSize="9dp"
                    android:text="plus"
                    android:layout_marginLeft="0dp"
                    android:layout_width="80dp"
                    android:layout_height="32dp">

                </Button>
                <ImageView
                    android:src="@drawable/ic_baseline_account_balance_wallet_24"
                    android:layout_marginTop="8dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp">

                </ImageView>
                <Button
                    android:layout_marginTop="6.5dp"
                    android:textSize="9dp"
                    android:text="100$"
                    android:layout_marginLeft="1dp"
                    android:layout_width="60dp"
                    android:layout_height="32dp">

                </Button>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <FrameLayout
                android:background="#0000FF"
                android:id="@+id/frag_c"
                android:layout_width="200dp"
                android:layout_height="200dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:id="@+id/goodbye"
                    android:textColor="#fff"
                    android:text="Goodbye Habits."
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:id="@+id/goodb"
                    android:textColor="#fff"
                    android:text="@string/your_string_here"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="#87ceeb"
                    android:id="@+id/tv"
                    android:text="50% OFF"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="70dp"
                    android:layout_width="150dp"
                    android:layout_height="30dp">

                </TextView>
                <TextView
                    android:layout_marginTop="103dp"
                    android:layout_width="150dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="15dp"
                    android:text="on First Booking"
                    android:layout_height="20dp">

                </TextView>
                <Button
                    android:layout_marginTop="127dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:text="Use Code FIRST50"
                    android:layout_width="150dp"
                    android:layout_height="38dp">

                </Button>


            </FrameLayout>
            <FrameLayout
                android:background="#0000FF"
                android:layout_width="200dp"
                android:layout_height="200dp">
                <ImageView
                    android:src="@drawable/doct"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="180dp">

                </ImageView>
                
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="185dp">
                <ImageView
                    android:id="@+id/iv"
                    android:src="@drawable/doct"
                    android:layout_width="150dp"
                    android:layout_height="150dp">

                </ImageView>
                <TextView
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="Instance Video Consultation"
                    android:layout_marginTop="150dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="185dp">
                <ImageView
                    android:src="@drawable/docs"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="150dp"
                    android:layout_height="120dp">

                </ImageView>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="In-Clinic Doctor Appointment"
                    android:layout_marginTop="140dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp">

                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="185dp">
                <ImageView

                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="35dp"
                    android:src="@drawable/labs"
                    android:layout_width="100dp"
                    android:layout_height="150dp">

                </ImageView>
                <TextView
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:text="Lab Test and Check ups"
                    android:layout_marginTop="150dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp">

                </TextView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="185dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/g">

                </ImageView>
                <TextView
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="Medical and Essentials"
                    android:layout_marginTop="150dp"
                    android:layout_width="150dp"
                    android:layout_height="35dp">

                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

       

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>