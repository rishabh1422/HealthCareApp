<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:id="@+id/practo"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/doc"
            android:layout_width="75dp"
            android:layout_height="75dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Rishabh Singh"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#8cbed6"
                android:text="View and Edit Profile"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

            </TextView>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#228B22"
                android:text="10% profile Complete"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

            </TextView>
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/practo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:text="Practo"
            android:layout_marginTop="2dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_width="76dp"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:textSize="9dp"
            android:text="plus"
            android:layout_marginLeft="90dp"
            android:layout_width="80dp"
            android:layout_height="32dp">

        </Button>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:text="Health Plan for your family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>





</RelativeLayout>